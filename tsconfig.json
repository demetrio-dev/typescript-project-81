{
  "compilerOptions": {
    "target": "ESNext",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "strict": true,
    "noEmit": false,
    "moduleResolution": "bundler",
    "module": "preserve",
    "allowImportingTsExtensions": false,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "./dist",
    "rootDir": "./src",
  },
  "include": [
    "src/**/*",
  ],
}
